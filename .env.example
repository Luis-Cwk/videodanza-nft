# VideoDanza NFT - Configuración de Entorno
# Copia este archivo a .env.local y rellena con tus valores

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Dirección del contrato VideoDanzaNFT en Base
# Se obtiene después de deployment en FASE 1
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ID de la cadena de Base
# Base Mainnet: 8453
# Base Sepolia (Testnet): 84532
NEXT_PUBLIC_CHAIN_ID=8453

# RPC URL para Base Mainnet
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# RPC URL para Base Testnet (desarrollo)
NEXT_PUBLIC_BASE_TESTNET_RPC=https://sepolia.base.org
NEXT_PUBLIC_BASE_TESTNET_CHAIN_ID=84532

# Precio de mint en Wei (0.001 ETH = 1000000000000000 wei)
NEXT_PUBLIC_MINT_PRICE=1000000000000000

# ============================================
# IPFS & PINATA CONFIGURATION
# ============================================

# API Key de Pinata (https://pinata.cloud)
PINATA_API_KEY=your_pinata_api_key_here

# API Secret de Pinata
PINATA_API_SECRET=your_pinata_api_secret_here

# URL del Gateway de Pinata para acceder a contenido
PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# Dirección base de IPFS (alternativa)
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Timeout para requests a IPFS (milisegundos)
IPFS_TIMEOUT=30000

# ============================================
# API CONFIGURATION
# ============================================

# URL base de la API (frontend)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# URL base de la API (backend - para requests internas)
# En producción, usar mismo dominio que frontend
INTERNAL_API_URL=http://localhost:3000/api

# Clave secreta de API (para validar requests internos)
API_SECRET=super_secret_key_change_this_in_production

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT Secret para tokens de autenticación
# Generar con: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_in_production

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_MINT_PER_MINUTE=5

# Tiempo de expiración de JWT (en segundos)
JWT_EXPIRATION=86400

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Base de datos local (desarrollo)
# Producción usar PostgreSQL
DATABASE_URL=file:./videodanza.db

# PostgreSQL (producción, comentar para desarrollo)
# DATABASE_URL=postgresql://user:password@localhost:5432/videodanza

# ============================================
# LOGGING & MONITORING
# ============================================

# Nivel de logging
LOG_LEVEL=info

# Habilitar logs detallados
DEBUG=false

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# URL pública del frontend
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_INTERACTIVITY=false

# ============================================
# WALLET CONFIGURATION (Rainbow Kit)
# ============================================

# Project ID de WalletConnect (https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Redes soportadas
NEXT_PUBLIC_SUPPORTED_CHAINS=8453,84532

# ============================================
# EMAIL CONFIGURATION (opcional)
# ============================================

# Para notificaciones de mint
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ============================================
# THIRD PARTY SERVICES
# ============================================

# OpenSea API (para verificación de NFTs)
OPENSEA_API_KEY=your_opensea_api_key

# Etherscan API (para verificación de contratos)
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================
# FEATURE FLAGS
# ============================================

# Habilitar feature de webcam (FASE 4)
NEXT_PUBLIC_ENABLE_WEBCAM=false

# Habilitar interactividad avanzada (FASE 4)
NEXT_PUBLIC_ENABLE_INTERACTIVE_MODE=false

# Habilitar galería de NFTs
NEXT_PUBLIC_ENABLE_NFT_GALLERY=true

# ============================================
# DEVELOPMENT & DEBUG
# ============================================

# Mock mode (simular sin blockchain)
NEXT_PUBLIC_MOCK_MODE=false

# Skip wallet connection
NEXT_PUBLIC_SKIP_AUTH=false

# Log all API calls
NEXT_PUBLIC_LOG_API_CALLS=true

# ============================================
# NOTA IMPORTANTE
# ============================================
# 
# 1. Copiar este archivo: cp .env.example .env.local
# 2. Completar todos los valores requeridos
# 3. NUNCA hacer commit de .env.local a git
# 4. Las variables con NEXT_PUBLIC_ son visibles en navegador
# 5. Las variables sin NEXT_PUBLIC_ solo están en servidor
#
# ============================================
